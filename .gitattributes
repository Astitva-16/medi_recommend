# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.rst text eol=lf

# CSV and data files
*.csv text eol=lf
*.tsv text eol=lf

# Binary files
*.pkl binary
*.joblib binary
*.h5 binary
*.hdf5 binary
*.npz binary
*.npy binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Requirements and dependency files
requirements*.txt text eol=lf
Pipfile text eol=lf
Pipfile.lock text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf
pyproject.toml text eol=lf
